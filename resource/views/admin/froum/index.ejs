<div class="row">
    <!-- ============================================================== -->
    <!-- basic table  -->
    <!-- ============================================================== -->
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">انجمن های سایت</h5>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>نام انجمن</th>
                                <th>تعداد پیام ها</th>
                                <th>تعداد پاسخ ها</th>
                                <th>آخرین بروزرسانی</th>
                                <th>تنظیمات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% froums.docs.forEach(froum => { %>
                            <tr>
                                <td><%= froum.title %></td>
                                <td><%= froum.questions.length %></td>
                                <% let count = 0 %>
                                <% froum.questions.forEach(question => { %>
                                    <% count += question.countAns %>
                                <% }) %>
                                <td><%= count %></td>
                                <td><%= date(froum.updatedAt).fromNow() %></td>
                                <td>
                                    <form action="/admin/froum/<%= froum._id %>?_method=delete" method="POST">
                                        <input type="hidden" name="_method" value="delete">
                                        <div class="form-group text-center">
                                            <a href="/admin/froum/<%= froum._id %>/edit"
                                                class="btn btn-sm btn-outline-dark">ویرایش</a>
                                            <button type="submit" class="btn btn-sm btn-outline-dark"><i class="far fa-trash-alt"></i></button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>